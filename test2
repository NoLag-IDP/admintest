-- ---------------- Create Tabs / Sections ----------------
local tabBtns = {}
local tabFrames = {}

local function createTab(name)
    local btn = Instance.new("TextButton", mainFrame)
    btn.Size = UDim2.new(0,120,0,28)
    btn.Position = UDim2.new(0,10,0,#tabBtns*34 + 50)
    btn.BackgroundColor3 = Color3.fromRGB(180,30,30)
    btn.Text = name
    btn.TextColor3 = Color3.fromRGB(255,255,255)
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 14
    btn.BorderSizePixel = 0
    r(btn,6)
    
    local frame = Instance.new("Frame", mainFrame)
    frame.Size = UDim2.new(1,-20,1,-80)
    frame.Position = UDim2.new(0,10,0,90)
    frame.BackgroundTransparency = 1
    frame.Visible = false
    
    tabBtns[name] = btn
    tabFrames[name] = frame
    
    btn.MouseButton1Click:Connect(function()
        for n, b in pairs(tabBtns) do
            tabFrames[n].Visible = false
        end
        frame.Visible = true
    end)
    
    return frame
end

-- ---------------- Tabs ----------------
local petTab = createTab("Pet")
local eventTab = createTab("Event")
local moneyTab = createTab("Money")
local rebirthTab = createTab("Rebirth")
local luckyTab = createTab("Lucky")

-- ---------------- Functions for Buttons ----------------
local function mkButton(parent, text, callback)
    local btn = Instance.new("TextButton", parent)
    btn.Size = UDim2.new(0,200,0,40)
    btn.BackgroundColor3 = Color3.fromRGB(255,100,100)
    btn.Text = text
    btn.TextColor3 = Color3.fromRGB(255,255,255)
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 16
    btn.BorderSizePixel = 0
    r(btn,8)
    btn.MouseButton1Click:Connect(callback)
    return btn
end

local function mkTextBox(parent, placeholder, default)
    local box = Instance.new("TextBox", parent)
    box.Size = UDim2.new(0,200,0,40)
    box.BackgroundColor3 = Color3.fromRGB(50,50,50)
    box.PlaceholderText = placeholder
    box.Text = default or ""
    box.TextColor3 = Color3.fromRGB(255,255,255)
    box.Font = Enum.Font.Gotham
    box.TextSize = 16
    box.BorderSizePixel = 0
    r(box,8)
    return box
end

-- Now you can add **Pet / Event / Money / Rebirth / Lucky buttons and textboxes** inside their respective tabs  
-- using mkButton() and mkTextBox(), and link them to sendInvokeExact() functions
