minimizeBtn.Position = UDim2.new(1,-44,0,8)
minimizeBtn.BackgroundColor3 = Color3.fromRGB(180,30,30)
minimizeBtn.Text = "â€”"
minimizeBtn.Font = Enum.Font.GothamBold
